<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:id="@+id/rvCard" app:cardBackgroundColor="#BFBFCE"

>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="10"
    >
        <ImageView android:layout_width="40dp" android:layout_height="60dp"
                   android:id="@+id/ivDetails"
                   android:layout_weight="1" android:src="@android:drawable/ic_menu_more"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="8">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:textSize="20sp"
                      android:id="@+id/tvCat"
                      android:text="valami"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:id="@+id/tvBought"
                      android:textSize="20sp"
                      android:text="valami"/>


        </LinearLayout>

        <ImageView android:layout_width="20dp" android:layout_height="60dp"
                   android:layout_weight="1"
                   android:id="@+id/ivDelete" android:src="@android:drawable/ic_menu_delete"/>

    </LinearLayout>


</android.support.v7.widget.CardView>